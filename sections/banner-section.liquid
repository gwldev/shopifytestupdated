<section class="banner d-flex align-items-center" style="background-image:url({{ section.settings.banner_image | img_url:'master' }})">
  <div class="container">
    <h1>{{ section.settings.banner_title }}</h1>
    <p>{{ section.settings.banner_description }}</p>
    <a href="{{ section.settings.button_link }}"><button type="button" class="btn custom-btn">{{ section.settings.button_text }}</button></a>
  </div>
</section>
{% schema %}
  {
    "name": "Home Banner",
  "class": "index-section home-banner",
    "settings": [
    {
      "type":"image_picker",
      "id":"banner_image",
      "label":"Select Banner image"
    },
    {
      "type":"text",
      "id":"banner_title",
      "label":"Title"
    },
    {
      "type":"textarea",
      "id":"banner_description",
      "label":"Description"
    },
    {
      "type":"text",
      "id":"button_text",
      "label":"Button text"
    },
    {
      "type":"url",
      "id":"button_link",
      "label":"Button link"
    }
  ],
  "presets": [
    {
      "name": "Banner",
      "category":"Image",
      "settings": {
      
      }      
    }
  ]
  }
{% endschema %}

